                                                        {{ ((product.discountPriceDin * ((product.taxPercentage/100) + 1)) | round)  | number_format(2, '.', ',') }} din
                                                        <span class="font-light ml-1">{{ product.priceDin  | number_format(2, '.', ',') }} din</span>
                                                    {% else %}
