                                                <a href="{{ path('proizvod', {'id': product.id}) }}" class="font-default">
                                                    <h5>{{ product.title }}</h5>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                            {% else %}
                                <div>
                                    <div class="product-box">
                                        <div class="img-wrapper">
